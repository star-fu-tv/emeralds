<div class="jumbotron">
	<h1 class="animated flipInX" id="quizmaster-title">~ Quizzard ~</h1>
		<div class="row">
			<div id="icons">
			<a href="#" data-icon="&#xe000;"></a>
			<span class="icon-lab"></span>
			<span class="icon-rocket"></span>
			<span class="icon-music"></span>
			<span class="icon-droplet"></span>
			<span class="icon-pacman"></span>
		</div>
	</div>
	<div class="row">
	<%
	@players = Player.all
	@players.each do |player| %>

		<% unless player.name == "quizmaster" %>
		<div class="player-score" id="<%= player.image %>">
			<%= image_tag(player.image, :class=>"pull-left", :id=>"avatar") %>
			<div>
				<h4 class="player-score-h4"><%= player.name %> <br>: <%= player.points %> points</h4><br>
			</div>
		</div>
		<% end %>

	<% end %>
	</div>
</div>